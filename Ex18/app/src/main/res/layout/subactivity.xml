<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mã số bài hát -->
    <TextView
        android:id="@+id/txtmaso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã số: 12345"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Tên bài hát -->
    <TextView
        android:id="@+id/txtbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Lời bài hát -->
    <TextView
        android:id="@+id/txtloibaihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lời bài hát sẽ hiển thị ở đây..."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Tác giả -->
    <TextView
        android:id="@+id/txttacgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tác giả: N/A"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Nút Thích và Không Thích -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Nút Thích -->
        <ImageButton
            android:id="@+id/btnthich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favourite"
            android:contentDescription="@string/like_button"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            android:layout_marginEnd="8dp" />

        <!-- Nút Không Thích -->
        <ImageButton
            android:id="@+id/btnkhongthich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unlike"
            android:contentDescription="@string/unlike_button"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>
</LinearLayout>
